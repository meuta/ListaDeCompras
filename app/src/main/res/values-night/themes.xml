<resources>
    <!-- Base application theme. -->
    <style name="Theme.ListaDeCompras" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blackish</item>
        <item name="colorPrimaryVariant">@color/blackish</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/item_background_color</item>
        <item name="colorSecondaryVariant">@color/whitish</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:itemBackground">@color/grayish</item>
    </style>

    <style name="Theme.ListaDeCompras.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/blackish</item>
    </style>

    <style name="Theme.ListaDeCompras.NoActionBarLight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_dark_gray_color</item>
    </style>

    <style name="Theme.ListaDeCompras.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ListaDeCompras.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="colorSurface">@color/grayish</item>
    </style>
</resources>